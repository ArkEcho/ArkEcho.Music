@inherits LayoutComponentBase

@inject AppModel Model

<div class="page">
	<div class="sidebar">
		<NavMenu />
	</div>

	<div class="main">
		<div class="top-row px-4">
			<a href="https://docs.microsoft.com/aspnet/" target="_blank">Counter: @Model.Counter About</a>
		</div>

		<div class="content px-4">
			@Body
		</div>
	</div>
</div>

@code
{ protected override void OnInitialized()
			{
				// auf Event vom Model reagieren und das UI Updaten
				Model.CounterChanged += () => InvokeAsync(StateHasChanged);

				base.OnInitialized();
			} }