@inject IAppModel Model

<MudButton OnClick="Play">Play</MudButton>
<MudButton OnClick="Pause">Pause</MudButton>
<MudButton OnClick="PlayPause">PlayPause</MudButton>
<MudButton OnClick="Stop">Stop</MudButton>
<MudButton OnClick="Mute">Mute</MudButton>
<MudButton OnClick="Shuffle">Shuffle</MudButton>
<MudButton OnClick="Backward">Backward</MudButton>
<MudButton OnClick="Forward">Forward</MudButton>


@code 
{    
    private void Play()
    {
        Model.Player.Play();
    }

    private void Pause()
    {
        Model.Player.Pause();
    }

    private void PlayPause()
    {
        Model.Player.PlayPause();
    }

    private void Stop()
    {
        Model.Player.Stop();
    }

    private void Shuffle()
    {
        Model.Player.Shuffle = !Model.Player.Shuffle;
    }

    private void Mute()
    {
        Model.Player.Mute = !Model.Player.Mute;
    }

    private void Backward()
    {
        Model.Player.Backward();
    }

    private void Forward()
    {
        Model.Player.Forward();
    }
}
