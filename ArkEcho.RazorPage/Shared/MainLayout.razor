@inherits LayoutComponentBase

@inject IAppModel Model
@inject NavigationManager NavigationManager

<MudLayout>

    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5">ArkEcho Music</MudText>
        <MudSpacer />
        <MudAvatar Size="Size.Medium" Color="Color.Tertiary">A</MudAvatar>
    </MudAppBar>

    <MudDrawer @bind-Open="@showSidebar" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudButton @onclick="Logout">Logout</MudButton>
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <PlayerControl />
        @Body
    </MudMainContent>

</MudLayout>

@code
{
    private bool showSidebar = false;

    protected override async Task OnInitializedAsync()
    {
        //Console.WriteLine("MainLayout OnInitializedAsync");

        if (!await Model.IsUserAuthenticated())
            NavigationManager.NavigateTo("/");

        // TODO: Move to Login
        bool success = await Model.InitializeLibraryAndPlayer();

        // TODO Give Error or Success!
    }

    public async Task DrawerToggle()
    {
        showSidebar = !showSidebar;
        await InvokeAsync(StateHasChanged);
    }

    public async Task Logout()
    {
        await Model.LogoutUser();
        NavigationManager.NavigateTo("/");
    }
}