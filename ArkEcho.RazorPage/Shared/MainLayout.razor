@inherits LayoutComponentBase

@inject IAppModel Model
@inject NavigationManager NavigationManager

<MudLayout>

    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        ArkEcho Music Player
        <MudSpacer />
        <MudFab Color="Color.Primary" Label="T" />
    </MudAppBar>

    <MudDrawer @bind-Open="@showSidebar" ClipMode="DrawerClipMode.Always" Elevation="2">
        <h2>@LoggedInText</h2>
        <MudButton @onclick="Logout">Logout</MudButton>
    </MudDrawer>

    <MudMainContent>
        <PlayerControl />
        @Body
    </MudMainContent>

</MudLayout>

@code
{
    private bool showSidebar = false;

    public string LoggedInText { get; set; } = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        //Console.WriteLine("MainLayout OnInitializedAsync");

        if (!await Model.IsUserAuthenticated())
            NavigationManager.NavigateTo("/");

        // TODO: Move to Login
        bool success = await Model.InitializeLibraryAndPlayer();

        // TODO Give Error or Success!
    }

    public async Task DrawerToggle()
    {
        showSidebar = !showSidebar;
        await InvokeAsync(StateHasChanged);
    }

    public async Task Logout()
    {
        await Model.LogoutUser();
        NavigationManager.NavigateTo("/");
    }
}