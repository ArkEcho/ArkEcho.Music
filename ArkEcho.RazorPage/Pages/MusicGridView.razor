
@inherits MusicDisplayBase

@inject IAppModel model

@*<h3>MusicGridView  @Display.DisplayName, @Sorting.DisplayName</h3>*@

<MudGrid Spacing="2" Justify="Justify.Center">

@foreach(Album album in model.Library.Album)
{
    <MudItem xs="6" sm="4" md="3" lg="2" xl="1">
        <MudCard>
            <MudCardHeader>
                <MudImage Class="rounded-lg" Src="@(getAlbumCover(album))" Width="100" Height="100" ObjectFit="ObjectFit.Fill" />
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">@album.Name.Truncate(25)</MudText>
                    <MudText Typo="Typo.overline">@(model.Library.GetAlbumArtist(album.AlbumArtist).Name.Truncate(20))|@(album.MusicFiles.Count)</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudIconButton OnClick="() => startMusicAlbum(album)" Icon="@Icons.Material.Rounded.PlayArrow" Color="Color.Default" />
                <MudIconButton Icon="@Icons.Material.Rounded.List" Color="Color.Default" />
            </MudCardActions>
        </MudCard>
    </MudItem>
}

</MudGrid>

